<%= form_tag experiences_path, method: :get, class: 'row' do %>
  <div class="col-12 col-md-10">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Tapez un lieu" %>
  </div>
  <div class="col-12 col-md-2">
      <%= submit_tag "Search", class: "btn btn-red" %>
  </div>
<% end %>
