<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_url('fete_à_la_plage.jpg') %>);">
  <div class= "container">
    <div class= "row">
      <div class= "col-12 col-md-8 col-lg-6">
        <h1> MEET AND FUN </h1>
        <p>Enjoy and split the bill ! </p>
        <%= form_tag experiences_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find an experience" %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <h3>Les dernières expériences</h3>
</div>

<div class="container">
  <div class="cards">
    <% @experiences.each do |experience| %>
      <%= link_to experience_path(experience) do %>
      <div class="card-experience">
        <img src="<%= asset_url('sortie_mer.jpg') %>" alt="">
        <div class="card-experience-infos">
          <div>
            <h2><%= experience.name %></h2>
          </div>
          <h2 class="card-experience-pricing"><%= experience.price %> €</h2>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

  <button class="btn-red mt-3">
    <%= link_to "Voir toutes les expériences", experiences_path %>
  </button>
</div>
